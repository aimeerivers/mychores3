!!!
%html
  %head
    %title= yield(:title)
    = formtastic_stylesheet_link_tag

  %body
    %p= link_to('MyChores', root_path)

    - if logged_in?
      %p
        Signed in as
        = link_to(current_user.name, edit_user_path)

      = link_to('Sign out', sign_out_path, {:id => 'sign-out-link'})
    - else
      = link_to('Sign in', sign_in_path, {:id => 'sign-in-link'})
      or
      = link_to('Sign up', sign_up_path, {:id => 'sign-up-link'})

    %h2= yield(:title)

    - if flash[:success]
      .flash.success= flash[:success]
    - if flash[:error]
      .flash.error= flash[:error]

    = yield
